.swiper-container.js-slider-menu.overflow-hidden(class="mb-[23px] -mr-[5px] md:mr-0")
    .swiper-wrapper
        each item, i in ['Все вино', 'Красное', 'Белое', 'Розовое', 'Красное', 'Белое', 'Розовое', 'Красное', 'Белое', 'Розовое']
            .swiper-slide.slider-menu-swiper-slide
                .flex.items-center.justify-center.border(class="rounded-[20px] border-[#D9D9D9]")
                    a(href="#", data-section=`${item}`, class= i === 0 ? 'active' : '', class="py-[4.5px] xl:py-[8px] text-[14px] md:text-[10px] xl:text-[16px] whitespace-nowrap")=item
.flex(class="gap-[20px] xl:gap-[52px] flex-col md:flex-row")
    div
        p(class="text-[16px] md:text-[10px] xl:text-[20px] font-bold mb-[17px] md:mb-[10px]") Сахар
        ul
            each item in ['Сухое', 'Полусухое', 'Полусладкое']
                li(class="leading-[normal] xl:leading-[25px]"): a.text-primary(href="#" class="text-[14px] md:text-[10px] xl:text-[16px]")=item
    div
        p(class="text-[16px] md:text-[10px] xl:text-[20px] font-bold mb-[17px] md:mb-[10px]") Сорт
        ul
            each item in ['Каберне', 'Пино Гриджио', 'Совиньон Блан', 'Пино Нуар', 'Цвайгельт']
                li(class="leading-[normal] xl:leading-[25px]"): a.text-primary(href="#" class="text-[14px] md:text-[10px] xl:text-[16px]")=item
    div
        p(class="text-[16px] md:text-[10px] xl:text-[20px] font-bold mb-[17px] md:mb-[10px]") Страна
        ul
            each item in ['Португалия', 'Армения', 'Франция', 'Россия']
                li(class="leading-[normal] xl:leading-[25px]"): a.text-primary(href="#" class="text-[14px] md:text-[10px] xl:text-[16px]")=item